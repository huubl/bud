{
  "name": "@roots/sage",
  "version": "3.2.0-next.2",
  "description": "Sage starter theme build tooling",
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/bud.git",
    "directory": "packages/@roots/sage"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "keywords": [
    "bud-preset",
    "sage"
  ],
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "files": [
    "lib/",
    "bin/"
  ],
  "bin": "bin/sage",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "types": "./lib/types/index.d.ts",
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc --build tsconfig.json",
    "build:esm": "tsc --build tsconfig-esm.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:lib clean:modules clean:types",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^14.14.39",
    "@types/rimraf": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@roots/bud": "workspace:*",
    "@roots/bud-api": "workspace:*",
    "@roots/bud-babel": "workspace:*",
    "@roots/bud-cli": "workspace:*",
    "@roots/bud-entrypoints": "workspace:*",
    "@roots/bud-esbuild": "workspace:*",
    "@roots/bud-eslint": "workspace:*",
    "@roots/bud-framework": "workspace:*",
    "@roots/bud-postcss": "workspace:*",
    "@roots/bud-preset-recommend": "workspace:*",
    "@roots/bud-prettier": "workspace:*",
    "@roots/bud-react": "workspace:*",
    "@roots/bud-stylelint": "workspace:*",
    "@roots/bud-support": "workspace:*",
    "@roots/bud-tailwindcss": "workspace:*",
    "@roots/bud-typescript": "workspace:*",
    "@roots/bud-wordpress-dependencies": "workspace:*",
    "@roots/bud-wordpress-externals": "workspace:*",
    "@roots/bud-wordpress-manifests": "workspace:*",
    "@roots/container": "workspace:*",
    "@roots/filesystem": "workspace:*",
    "fs-extra": "^9.1.0"
  }
}
