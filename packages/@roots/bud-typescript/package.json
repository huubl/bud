{
  "name": "@roots/bud-typescript",
  "version": "3.2.0-next.2",
  "description": "Adds Typescript support to Bud.",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/@roots/bud-typescript"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "keywords": [
    "webpack",
    "bud",
    "bud-extension"
  ],
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/",
    "publish/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "types": "./lib/types/index.d.ts",
  "scripts": {
    "build": "yarn g:build",
    "build:cjs": "yarn g:build:cjs",
    "build:esm": "yarn g:build:esm",
    "lint": "yarn g:lint",
    "lint:eslint": "yarn g:lint:eslint",
    "lint:prettier": "yarn g:lint:prettier",
    "clean": "yarn g:clean",
    "clean:lib": "yarn g:clean:lib",
    "clean:modules": "yarn g:clean:modules",
    "clean:types": "yarn g:clean:types",
    "pkg:check": "yarn g:pkg:check",
    "pkg:format": "yarn g:pkg:format"
  },
  "peerDependencies": {
    "eslint": "^7.23.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@roots/bud-babel": "workspace:*",
    "@skypack/package-check": "^0.2.2",
    "@types/node": "^15.0.0",
    "@types/rimraf": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "webpack": "^5.36.0"
  },
  "dependencies": {
    "@roots/bud-framework": "workspace:*",
    "@roots/bud-support": "workspace:*",
    "@typescript-eslint/parser": "^4.22.0",
    "autobind-decorator": "^2.4.0",
    "fork-ts-checker-webpack-plugin": "^6.2.5",
    "globby": "^11.0.3",
    "ts-loader": "^9.1.1"
  }
}
