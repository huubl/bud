{
  "name": "@roots/bud",
  "version": "3.2.0-next.2",
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/@roots/bud"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "keywords": [
    "webpack"
  ],
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc --build tsconfig.json",
    "build:esm": "tsc --build tsconfig-esm.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:lib clean:modules clean:types",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write"
  },
  "devDependencies": {
    "@roots/bud-typings": "workspace:*",
    "@types/copy-webpack-plugin": "^6.4.1",
    "@types/css-minimizer-webpack-plugin": "^1.1.3",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.11",
    "@types/lodash": "^4.14.168",
    "@types/mini-css-extract-plugin": "^1.4.1",
    "@types/node": "^14.14.39",
    "@types/react": "^17.0.3",
    "@types/rimraf": "^3.0.0",
    "@types/signale": "^1.4.1",
    "@types/webpack-manifest-plugin": "^3",
    "@types/yargs": "^16.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "webpack": "^5.33.2"
  },
  "dependencies": {
    "@roots/bud-api": "workspace:*",
    "@roots/bud-build": "workspace:*",
    "@roots/bud-cache": "workspace:*",
    "@roots/bud-cli": "workspace:*",
    "@roots/bud-compiler": "workspace:*",
    "@roots/bud-dashboard": "workspace:*",
    "@roots/bud-extensions": "workspace:*",
    "@roots/bud-framework": "workspace:*",
    "@roots/bud-hooks": "workspace:*",
    "@roots/bud-server": "workspace:*",
    "@roots/bud-support": "workspace:*",
    "@roots/dependencies": "workspace:*",
    "@roots/filesystem": "workspace:packages/@roots/filesystem",
    "@roots/ink-use-style": "workspace:packages/@roots/ink-use-style",
    "autobind-decorator": "^2.4.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "html-webpack-harddisk-plugin": "^2.0.0",
    "html-webpack-plugin": "^5.3.1",
    "ignore-emit-webpack-plugin": "^2.0.6",
    "ink": "^3.0.8",
    "ink-spinner": "^4.0.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^1.4.1",
    "react": "^17.0.2",
    "signale": "^1.4.0",
    "webpack-config-dump-plugin": "^3.0.1",
    "webpack-manifest-plugin": "^3.1.1",
    "yargs": "^16.2.0"
  }
}
