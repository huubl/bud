{
  "name": "@roots/bud",
  "version": "3.2.0-next.2",
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/@roots/bud"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "keywords": [
    "webpack"
  ],
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc --build tsconfig.json",
    "build:esm": "tsc --build tsconfig-esm.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:lib clean:modules clean:types",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write"
  },
  "devDependencies": {
    "@roots/bud-typings": "^3.2.0-next.0",
    "@types/node": "^14.14.39",
    "@types/rimraf": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "webpack": "^5.33.2"
  },
  "dependencies": {
    "@roots/bud-api": "workspace:packages/@roots/bud-api",
    "@roots/bud-build": "workspace:packages/@roots/bud-build",
    "@roots/bud-cache": "workspace:packages/@roots/bud-cache",
    "@roots/bud-cli": "workspace:packages/@roots/bud-cli",
    "@roots/bud-compiler": "workspace:packages/@roots/bud-compiler",
    "@roots/bud-dashboard": "workspace:packages/@roots/bud-dashboard",
    "@roots/bud-extensions": "workspace:packages/@roots/bud-extensions",
    "@roots/bud-framework": "workspace:packages/@roots/bud-framework",
    "@roots/bud-hooks": "workspace:packages/@roots/bud-hooks",
    "@roots/bud-server": "workspace:packages/@roots/bud-server",
    "@roots/bud-support": "workspace:packages/@roots/bud-support",
    "@roots/dependencies": "workspace:packages/@roots/dependencies"
  },
  "gitHead": "2895cea534566264c5a908ad52b26a2eab1e5684"
}
