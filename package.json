{
  "name": "bud-monorepo",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": ">=15.0"
  },
  "workspaces": {
    "packages": [
      "packages/@roots/*",
      "examples/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach --parallel --interlaced --verbose --topological run build",
    "dev": "node ./scripts/dev",
    "ci": "run-s build lint:eslint lint:prettier test pkg",
    "clean": "rimraf node_modules 'packages/@roots/*/{lib,types,node_modules}'",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'packages/**/src/**/*'  --write",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -u",
    "test": "jest --verbose",
    "pkg": "yarn workspaces foreach yarn run pkg",
    "pkg:local": "run-p pkg:npm:local pkg:yarn:local",
    "pkg:remote": "run-p pkg:npm:remote pkg:yarn:remote",
    "pkg:npm:local": "npm config set registry https://localhost:4873",
    "pkg:npm:remote": "npm config set registry https://registry.npmjs.org/",
    "pkg:yarn:local": "yarn config set npmRegistryServer https://localhost:4873",
    "pkg:yarn:remote": "yarn config set npmRegistryServer https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@roots/bud-framework": "workspace:*",
    "@skypack/package-check": "^0.2.2",
    "@types/autoprefixer": "^10.2.0",
    "@types/compression-webpack-plugin": "^6.0.5",
    "@types/copy-webpack-plugin": "^6.4.1",
    "@types/css-minimizer-webpack-plugin": "^1.1.3",
    "@types/cssnano": "^4.0.0",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.11",
    "@types/imagemin": "^7.0.0",
    "@types/jest": "^26.0.22",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/lodash": "^4.14.168",
    "@types/mini-css-extract-plugin": "^1.4.1",
    "@types/node": "^14.14.39",
    "@types/node-notifier": "^8.0.0",
    "@types/react": "^17.0.3",
    "@types/shell-quote": "^1.7.0",
    "@types/signale": "^1.4.1",
    "@types/webpack-env": "^1.16.0",
    "@types/write-file-webpack-plugin": "^4.5.1",
    "autoprefixer": "^10.2.5",
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "copy-webpack-plugin": "^8.1.1",
    "critical": "^2.0.6",
    "css-loader": "^5.2.1",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "dotenv": "^8.2.0",
    "escape-string-regexp": "^4.0.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "execa": "^5.0.0",
    "express": "^4.17.1",
    "file-loader": "^6.2.0",
    "fs-extra": "^9.1.0",
    "http-proxy-middleware": "^1.1.2",
    "husky": "^6.0.0",
    "ink": "^3.0.8",
    "ink-big-text": "^1.2.0",
    "ink-gradient": "^2.0.0",
    "jest": "^26.6.3",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^1.4.1",
    "mini-svg-data-uri": "^1.2.3",
    "node-notifier": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "patch-console": "^1.0.0",
