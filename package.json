{
  "name": "bud-monorepo",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": ">=15.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/@roots/*",
      "examples/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach --parallel --interlaced --verbose --topological run build",
    "dev": "run node ./scripts/dev",
    "ci": "run-s build lint:eslint lint:prettier test pkg",
    "clean": "rimraf node_modules 'packages/@roots/*/{lib,types,node_modules}'",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'packages/**/src/**/*'  --write",
    "test": "jest --verbose",
    "release": "release-it"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.39",
    "chokidar": "^3.5.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "release-it": "^14.6.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "type-fest": "^1.0.2",
    "typescript": "^4.2.4"
  }
}
